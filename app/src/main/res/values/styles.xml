<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- Buttons -->

    <style name="BlueCustomButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:width">300dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:accessibilityLiveRegion">assertive</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/PrimaryBlue</item>
        <item name="strokeColor">@color/PrimaryBlue</item>
    </style>

    <style name="PinkCustomButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:width">300dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:accessibilityLiveRegion">assertive</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">@color/PrimaryPink</item>
        <item name="strokeColor">@color/PrimaryPink</item>
    </style>


<!--    Text -->

    <style name="text_heading_1">
        <item name="android:textColor">@color/PrimaryBlue</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_heading_2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_body_1">
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_body_2">
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_body_light">
        <item name="android:textColor">@color/DarkGrey</item>
        <item name="android:textSize">18sp</item>
    </style>



<!-- Cards -->
    <style name="card_generic">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundColor">@color/white</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPadding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>